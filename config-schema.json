{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Universal Framework Configuration",
  "type": "object",
  "properties": {
    "root": {
      "description": "Root folder of framework",
      "examples": ["/opt/lampp/htdocs"]
    },
    "session": {
      "title": "Sessions Configuration",
      "type": "object",
      "properties": {
        "folder": {
          "title": "Folder sessions",
          "description": "Which folder you want to save all sessions",
          "examples": ["src/Session/sessions"]
        }
      }
    }
  }
}
