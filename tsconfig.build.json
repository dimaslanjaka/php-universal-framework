{
  "compilerOptions": {
    "strict": false,
    "target": "ES6",
    "module": "amd",
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": false,
    "outFile": "./src/MVC/themes/assets/js/app.js",
    "sourceRoot": "./libs/js/",
    "rootDir": "./libs/js/",
    "sourceMap": true,
    "watch": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "importHelpers": true,
    "lib": ["DOM", "ESNext", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./libs/js/**/*"],
  "typeAcquisition": {
    "include": ["jQuery", "toastr", "sweetalert", "CryptoJS", "sass", "less"]
  },
  "exclude": [
    "node_modules",
    "**/.vscode/**",
    "**/node_modules/**",
    "**/vendor/**",
    "**/tmp/**",
    "**/assets/**",
    "**/views/**",
    "**.min.js",
    "libs/src/**"
  ]
}
