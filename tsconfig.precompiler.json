{
  "compilerOptions": {
    "strict": false,
    "target": "ES5",
    "module": "amd",
    "declaration": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": false,
    "outFile": "./libs/src/compiler/framework.js",
    "sourceRoot": "./libs/js/",
    "rootDir": "./libs/js/",
    "sourceMap": true,
    "watch": false,
    "skipLibCheck": true,
    "importHelpers": true,
    "charset": "UTF-8",
    "disableSizeLimit": false,
    "lib": [
      "DOM",
      "ESNext",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020"
    ],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./libs/js/**/*"],
  "typeAcquisition": {
    "include": ["jQuery", "toastr", "sweetalert", "CryptoJS", "crypto-js"]
  },
  "exclude": [
    "node_modules",
    "**/.vscode/**",
    "**/node_modules/**",
    "**/vendor/**",
    "**/tmp/**",
    "**/assets/**",
    "**/views/**",
    "**.min.js"
  ]
}
