{
    "compilerOptions": {
        "strict": false,
        "target": "ES5",
        "module": "CommonJS",
        "declaration": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true,
        "declarationMap": false,
        "outDir": "./src/node",
        "sourceRoot": "./tmp/libs/",
        "rootDir": "./libs/",
        "sourceMap": true,
        "watch": false,
        "skipLibCheck": true,
        "importHelpers": true,
        "charset": "UTF-8",
        "disableSizeLimit": false,
        "lib": [
            "DOM",
            "ESNext",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./libs/index.ts"
    ],
    "typeAcquisition": {
        "include": [
            "jQuery",
            "toastr",
            "sweetalert",
            "crypto-js"
        ]
    },
    "exclude": [
        "node_modules",
        "**/.vscode/**",
        "**/node_modules/**",
        "**/vendor/**",
        "**/tmp/**",
        "**/assets/**",
        "**/views/**",
        "**.min.js"
    ]
}