{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch And Build",
      "type": "shell",
      "isBackground": true,
      "options": {},
      "detail": "${defaultBuildTask}",
      "group": "build",
      "dependsOn": [
        {
          "type": "${workspaceFolder}"
        }
      ],
      "promptOnClose": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "command": "npm run start",
      "runOptions": {
        "instanceLimit": 1,
        "reevaluateOnRerun": true,
        "runOn": "folderOpen"
      }
    }
  ]
}