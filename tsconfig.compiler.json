{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "removeComments": false,
    "allowJs": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES2015", "ES7"],
    "rootDir": "./libs/src",
    "outDir": "./libs",
    "noLib": false,
    "esModuleInterop": true,
    "importHelpers": true
  },
  "buildOnSave": true,
  "compileOnSave": true,
  "exclude": [
    "./plugins/**/*",
    "./typings/**/*",
    "./node_modules/**/*",
    "./libs/compiler/**/*"
  ],
  "include": ["./libs/src/compiler/**/*"]
}
