{
  "compilerOptions": {
    "strict": false,
    "target": "ES6",
    "module": "commonjs",
    "declaration": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./libs/compiler",
    //"outFile": "./libs/compiler/core.js",
    "sourceRoot": "./libs/src/compiler/",
    "rootDir": "./libs/src/compiler/",
    "sourceMap": true,
    "watch": false,
    "skipLibCheck": true,
    "importHelpers": true,
    "lib": [
      "DOM",
      "ESNext",
      "ES2020"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./libs/src/compiler/**/*"
  ],
  "typeAcquisition": {
    "include": [
      "jQuery",
      "toastr",
      "sweetalert",
      "CryptoJS"
    ]
  },
  "exclude": [
    "node_modules",
    "**/.vscode/**",
    "**/node_modules/**",
    "**/vendor/**",
    "**/tmp/**",
    "**/assets/**",
    "**/views/**",
    "**.min.js"
  ]
}