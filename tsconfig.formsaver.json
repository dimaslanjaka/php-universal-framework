{
    "compilerOptions": {
        "strict": false,
        "target": "ES6",
        "module": "amd",
        "declaration": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "checkJs": false,
        "outFile": "./libs/js/jQueryPlugin-formsaver.js",
        //"sourceRoot": "./src/smartform/src/",
        "sourceMap": false,
        "inlineSources": false,
        "inlineSourceMap": false,
        "watch": false,
        "skipLibCheck": true,
        "importHelpers": true,
        "lib": ["DOM", "ESNext", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
        "typeRoots": ["node_modules/@types", "src/smartform/src/js/"]
    },
    "include": ["./libs/src/smartform/src/js/*"],
    "typeAcquisition": {
        "include": ["jQuery", "toastr", "sweetalert", "CryptoJS"]
    },
    "exclude": [
        "node_modules",
        "**/.vscode/**",
        "**/node_modules/**",
        "**/vendor/**",
        "**/tmp/**",
        "**/assets/**",
        "**/views/**",
        "**.min.js",
        "./libs/src/smartform/src/**/main.*"
    ]
}
