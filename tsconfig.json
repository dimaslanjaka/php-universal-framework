/*
 * VSCode typehinting support
 */
{
    "compilerOptions": {
        "emitDeclarationOnly": true,
        "declaration": true,
        "allowUmdGlobalAccess": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": true,
        "allowUnusedLabels": true,
        "checkJs": false,
        "pretty": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "watch": false,
        "allowJs": true,
        "removeComments": false,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "declarationDir": "./tmp/js",
        "outDir": "./tmp/js",
        "module": "commonjs",
        "typeRoots": [
            "./node_modules/@types",
            "./libs/typings",
            "./libs/js"
        ],
        "target": "ES5",
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020"
        ]
    },
    "typeAcquisition": {
        "enable": true,
        "include": [
            "jquery",
            "toastr",
            "datatables.net",
            "datatables.net-buttons",
            "datatables.net-rowreorder"
        ]
    },
    "compileOnSave": false,
    "include": [
        "./libs/src/**/*",
        "./libs/js/**/*",
        "./views/**/*",
        "./src/MVC/themes/**/*",
        "./assets/node/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "./src",
        "./vendor",
        "./tmp",
        "./assets/js",
        "**.min.js",
        "**/*.min.js",
        "./src/MVC/themes/assets/js",
        "./libs/compiler/**/*",
        "./libs/src/compiler/framework.js",
        "./libs/compiler/framework.js",
        "**/framework.js"
    ]
}