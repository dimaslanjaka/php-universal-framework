{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "declaration": true,
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "skipLibCheck": true,
    "allowJs": true,
    "watch": false,
    "removeComments": false,
    "declarationDir": "./tmp/js",
    "target": "ES5",
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020"
    ]
  },
  "compileOnSave": true,
  "include": ["./libs/**/*", "./views/**/*", "./src/MVC/themes/**/*"],
  "exclude": [
    "node_modules",
    "**/.vscode/**",
    "**/node_modules/**",
    "**/vendor/**",
    "**/tmp/**",
    "./assets",
    "**.min.js",
    "**/*.min.js",
    "./src/MVC/themes/assets/js",
    "./libs/compiler/**/*"
  ]
}
