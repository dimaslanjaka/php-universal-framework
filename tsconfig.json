/*
 * Typehinting vscode (NOT FOR COMPILE)
 * @author Dimas Lanjaka <dimaslanjaka@gmail.com>
 */
{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "target": "es5",
    "sourceMap": true,
    "removeComments": true,
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "allowUnusedLabels": true,
    "allowUnreachableCode": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "checkJs": false,
    "declaration": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020"
    ],
    "typeRoots": ["node_modules/@types"],
    "outDir": "./tmp/js",
    "esModuleInterop": true,
    "declarationDir": "./tmp/js",
    "declarationMap": true,
    "sourceRoot": "./"
  },
  "include": ["./libs/**/*", "./views/**/*", "./src/MVC/themes/**/*"],
  "exclude": [
    "node_modules",
    "**/.vscode/**",
    "**/node_modules/**",
    "**/vendor/**",
    "**/tmp/**",
    "**/assets/**",
    "**.min.js",
    "**/*.min.js",
    "src/MVC/themes/assets/js",
    "node_modules/@types/jquery",
    "./libs/compiler/**/*"
  ],
  "compileOnSave": true,
  "typeAcquisition": {
    "include": [
      "jQuery",
      "toastr",
      "datatables.net",
      "sweetalert",
      "sass",
      "mysql",
      "CryptoJS",
      "pako",
      "zlib",
      "crypto-js"
    ]
  }
}
