/*
 * VSCode Typehinting Module
 */
{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "tmp/js",
    "moduleResolution": "Node",
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types",
      "./libs/typings",
      "./libs/js"
    ],
    "types": [
      "core-js",
      "jquery",
      "requirejs",
      "node"
    ],
    "target": "ES5",
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020"
    ]
  },
  "include": [
    "./libs/src/**/*",
    "./libs/js/**/*",
    "./views/**/*",
    "./views/inventory/warehouses/**/*",
    "./src/MVC/themes/**/*",
    "./assets/node/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "./src",
    "./vendor",
    "./tmp",
    "./dist",
    "./assets/js",
    "**.min.js",
    "**/*.min.js",
    "./src/MVC/themes/assets/js",
    "./libs/compiler/**/*",
    "./libs/src/compiler/framework.js",
    "./libs/compiler/framework.js",
    "**/framework.js",
    "./libs/src/observatory/lib/**/*"
  ]
}