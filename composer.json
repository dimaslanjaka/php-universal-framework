{
    "name": "dimaslanjaka/php-html",
    "description": "Simple PHP MVC",
    "keywords": [
        "aes-encryption",
        "rijndael",
        "cryptolib"
    ],
    "homepage": "https://github.com/dimaslanjaka/universal-framework",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Dimas Lanjaka",
            "email": "dimaslanjaka@gmail.com"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.1",
        "ext-curl": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "codeigniter4/framework": "^4.0",
        "codeigniter4/translations": "^4.0",
        "phpdocumentor/phpdocumentor": "2.*",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "larapack/dd": "^1.0",
        "phpunit/phpunit": "^5.7|6.2|^7.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "files": [
            "libs/templateParse.php",
            "libs/func.php"
        ],
        "psr-4": {
            "MrShan0\\CryptoLib\\": "libs",
            "DB\\": "libs"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
