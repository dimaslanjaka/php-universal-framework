{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "npm",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "tasks": [
        {
            "label": "install",
            "args": [
                "install"
            ],
            "type": "shell"
        },
        {
            "label": "build",
            "args": [
                "run",
                "build"
            ],
            "isBackground": true,
            "group": "build",
            "type": "shell"
        },
        {
            "label": "test",
            "args": [
                "run",
                "test"
            ],
            "type": "shell"
        }
    ]
}