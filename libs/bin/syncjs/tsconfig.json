{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ES2015",
      "ES7"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "noLib": false,
    "importHelpers": true
  },
  "buildOnSave": true,
  "compileOnSave": true,
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./plugins/**/*",
    "./typings/**/*",
    "./node_modules/**/*",
    "./dist/**/*"
  ]
}