/*
 * Typehinting vscode (NOT FOR COMPILE)
 * @author Dimas Lanjaka <dimaslanjaka@gmail.com>
 */
{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "removeComments": true,
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true, 
    "noImplicitAny": true,
    "allowUnusedLabels": true,
    "allowUnreachableCode": true,
    "skipLibCheck": true,
    "declaration": true,
    "checkJs": true,
    "charset": "UTF-8",
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020"
    ],
    "outDir": "./tmp/js/jsconfig",
    "declarationDir": "./tmp/js/jsconfig",
    "sourceRoot": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["./libs/**/*", "./views/**/*", "src/MVC/themes/**/*"],
  "exclude": [
    "node_modules",
    "**/.vscode/**",
    "**/node_modules/**",
    "**/vendor/**",
    "**/tmp/**",
    "**/assets/**",
    "**.min.js",
    "**/*.min.js",
    "src/MVC/themes/assets/js",
    "node_modules/@types/jquery"
  ],
  "compileOnSave": true,
  "typeAcquisition": {
    "include": ["jQuery", "toastr", "datatables.net", "sweetalert", "CryptoJS"]
  }
}
