{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "declaration": true,
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "skipLibCheck": true,
    "watch": false,
    "removeComments": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "declarationDir": "./tmp/js",
    "target": "ES5",
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020"
    ]
  },
  "typeAcquisition": {
    "enable": true
  },
  "compileOnSave": false,
  "include": [
    "./libs/src/**/*",
    "./libs/js/**/*",
    "./views/**/*",
    "./src/MVC/themes/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/.vscode/**",
    "**/node_modules/**",
    "**/vendor/**",
    "./tmp",
    "./assets",
    "**.min.js",
    "**/*.min.js",
    "./src/MVC/themes/assets/js",
    "./libs/compiler/**/*",
    "./libs/src/compiler/framework.js",
    "./libs/compiler/framework.js"
  ]
}